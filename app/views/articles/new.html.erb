<h1 class = "m-4">New Article</h1>

<div class = "m-4">
  <%= form_with model: @article do |f| %>
  <div class = "my-2 p-1">
  <%= f.label :title %>
  <%= f.text_field :title%>
  </div>
  <div class = "my-2 p-1">
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
  <% end %>
</div>

<div class = "my-2 p-1">
<%= link_to "Back", articles_path %>
</div>
